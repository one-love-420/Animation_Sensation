<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@integer/config_boltAnimTime" android:exitFadeDuration="@integer/config_shortAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#99c0c0c0" />
            <stroke android:width="3.0dip" android:color="#ffc0c0c0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff161616" />
            <stroke android:width="1.0dip" android:color="#44444444" />
        </shape>
    </item>
</selector>